# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[package.json]
indent_style = space
indent_size = 2

[*.{md,css,yml}]
indent_style = space
indent_size = 2

[*.{css, scss, sass}]
syntax = postcss, scss, sass, css
file_type = postcss, scss, sass, css

[*.{html,astro}]
indent_size = 4
max_line_length = 120
insert_final_newline = false
