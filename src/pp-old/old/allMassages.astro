---
import { getCollection, CollectionEntry } from 'astro:content'
export const prerender = true
const ListMassages = await getCollection('massages')
interface Props {
	post: CollectionEntry<'massages'>
}

// `post` will match your 'blog' collection schema type
const { post } = Astro.props
---

<section>
	{
		ListMassages.map(({ slug, data: { title, description } }) => (
			<div class="mt-6 border-2 border-black bg-green-300">
				<a href={'/' + slug}>
					<li class="mx-auto">{title}</li>
					<li class="mx-auto">{description}</li>
				</a>
			</div>
		))
	}
</section>
