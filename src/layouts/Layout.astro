import { SEO } from 'astro-seo'

import '/src/Style/main.css'

//fonts
import '@fontsource/hind-guntur/400.css'
import '@fontsource/hind-guntur/500.css'
import '@fontsource/hind-guntur/600.css'
import '@fontsource/hind-guntur/700.css'
// Supports weights 300-700
import '@fontsource-variable/yrsa'
// Supports weights 400-900
import '@fontsource-variable/playfair-display'

export interface Props {
	title: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()



const { title } = Astro.props

const makeTitle = title ? title + ' | ' + 'Marina Li' : 'Marina li Masseuse Paris'
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->

	</head>
	<body>

		<slot />

		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
			body {
				@apply container;
			}
		</style>
	</body>
</html>
